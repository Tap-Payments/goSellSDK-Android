<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_basic_29dp"
    android:layout_marginTop="@dimen/margin_basic_29dp"
    android:background="@drawable/layout_main_section_background_shape"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_basic_15dp"
    android:paddingEnd="@dimen/margin_basic_16dp"
    android:paddingRight="@dimen/margin_basic_16dp"
    android:paddingStart="@dimen/margin_basic_23dp"
    android:paddingLeft="@dimen/margin_basic_23dp"
    android:paddingTop="@dimen/margin_basic_15dp">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextView.Title.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/tvValue"
        style="@style/TextView.Hyperlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/margin_basic_20dp"
        android:layout_marginStart="@dimen/margin_basic_20dp"
        android:layout_toEndOf="@id/tvTitle"
        android:layout_toRightOf="@id/tvTitle"
        android:layout_toStartOf="@+id/ivArrowIcon"
        android:layout_toLeftOf="@+id/ivArrowIcon"
        android:gravity="end"
        android:maxLines="1" />

    <ImageView
        android:id="@+id/ivArrowIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_arrow_right_normal" />

</RelativeLayout>