<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/basicLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alabaster"
    android:orientation="vertical">

    <include layout="@layout/gosellapi_toolbar_main"/>

    <FrameLayout
        android:id="@+id/paymentActivityFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <company.tap.gosellapi.internal.custom_views.GoSellPayButtonLayout
        android:id="@+id/payButtonId"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

</LinearLayout>
