<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_basic"
            android:layout_marginStart="@dimen/margin_basic_23dp"
            android:layout_marginTop="@dimen/margin_basic"
            android:layout_weight="1"
            android:text="@string/textview_title_save_for_merchant"/>

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/SwitchPrimary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_basic"
            android:layout_marginStart="@dimen/margin_basic_23dp"
            android:layout_marginTop="@dimen/margin_basic"
            android:layout_weight="1"
            android:text="@string/textview_title_save_for_gopay" />

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/SwitchSecondary" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textview_disclaimer_go_pay_checkouts" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textview_title_personal_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_main_section_background_shape"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height_basic"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="@dimen/margin_basic_25dp"
            android:layout_marginStart="@dimen/margin_basic_25dp"
            android:layout_marginTop="@dimen/margin_basic_9dp"
            app:hintTextAppearance="@style/TextInputLayout.Hint">

            <EditText
                android:id="@+id/nameField"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edittext_hint_name" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height_basic"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="@dimen/margin_basic_25dp"
            android:layout_marginStart="@dimen/margin_basic_25dp"
            android:layout_marginTop="@dimen/margin_basic_9dp"
            app:hintTextAppearance="@style/TextInputLayout.Hint">

            <EditText
                android:id="@+id/phoneField"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edittext_hint_phone_number"
                android:inputType="phone" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height_basic"
            android:layout_marginBottom="@dimen/margin_basic_9dp"
            android:layout_marginEnd="@dimen/margin_basic_25dp"
            android:layout_marginStart="@dimen/margin_basic_25dp"
            android:layout_marginTop="@dimen/margin_basic_9dp"
            app:hintTextAppearance="@style/TextInputLayout.Hint">

            <EditText
                android:id="@+id/email"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edittext_hint_email"
                android:inputType="textWebEmailAddress" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</LinearLayout>