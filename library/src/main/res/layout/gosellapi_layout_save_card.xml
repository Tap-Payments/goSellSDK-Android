<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/saveCardSwitchContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_basic_19dp"
                android:paddingBottom="@dimen/margin_basic_19dp"
                android:layout_marginStart="@dimen/margin_basic_4dp"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_basic_4dp"
    >

    <TextView
        style="@style/TextView.Disclaimer.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/saveCardSwitch"
        android:text="@string/textview_disclaimer_save_card"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/saveCardSwitch"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/saveCardSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_basic_16dp"
        android:layout_marginStart="@dimen/margin_basic_16dp"
        android:checked="false"
        android:theme="@style/SwitchPrimary"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
