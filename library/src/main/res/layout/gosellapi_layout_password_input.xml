<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
                android:id="@+id/otpParentLayout"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/confirmationCodeInput"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/textViewsLayout"
        android:layout_alignEnd="@+id/textViewsLayout"
        android:layout_alignRight="@+id/textViewsLayout"
        android:layout_alignStart="@id/textViewsLayout"
        android:layout_alignLeft="@id/textViewsLayout"
        android:layout_alignTop="@id/textViewsLayout"
        android:background="@android:color/transparent"
        android:cursorVisible="false"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:textColor="@android:color/transparent">

        <requestFocus />
    </EditText>

    <LinearLayout
        android:id="@+id/textViewsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#5BFFFFFF"
        android:orientation="horizontal"
        android:padding="19dp" />

</RelativeLayout>