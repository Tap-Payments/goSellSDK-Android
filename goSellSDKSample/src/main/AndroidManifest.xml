<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="company.tap.sample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SampleApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.CustomerCRUDActivity"
            android:theme="@style/tap"
            ></activity>

        <activity android:name=".activity.CustomerActivity"
            android:theme="@style/tap"
            >
            <intent-filter>
                <action android:name="SETTING_START_CUSTOMER_ACTIVITY" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:theme="@style/tap"
            android:label="@string/title_activity_settings" />

        <activity android:name=".MainActivity"
            android:theme="@style/tap"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="8bd8cf203548a5b7986799e05753f301310914f5" />

    </application>

</manifest>